{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:import/errors",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "plugins": [
    "react",
    "react-hooks",
    "@groww-tech/eslint-plugin-internal"
  ],
  "parserOptions": {
    "ecmaVersion": 10,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "rules": {
    "import/no-duplicates": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "quotes": [
      "warn",
      "single"
    ],
    "react/jsx-uses-react": "warn",
    "react/jsx-uses-vars": "warn",
    "react/jsx-key": 1,
    "no-var": "warn",
    "no-unused-vars": [
      "warn",
      {
        "args": "none",
        "caughtErrors": "none",
        "ignoreRestSiblings": true,
        "vars": "all"
      }
    ],
    "no-unreachable": "warn",
    "no-unreachable-loop": "warn",
    "no-unused-expressions": [
      "warn",
      {
        "allowShortCircuit": true,
        "allowTernary": true,
        "allowTaggedTemplates": true
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": [
          "error",
          "warn"
        ]
      }
    ],
    "no-func-assign": "error",
    "no-global-assign": "error",
    "no-import-assign": "error",
    "no-undef": "warn",
    "prefer-const": [
      "warn",
      {
        "destructuring": "all"
      }
    ],
    "react/no-deprecated": "warn"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "plugins": [
        "import"
      ],
      "rules": {
        "import/named": "off",
        "no-unused-vars": "off",
        "no-undef": "off"
      }
    }
  ]
}
